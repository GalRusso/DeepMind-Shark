# This is a Databricks asset bundle definition.
# See https://docs.databricks.com/dev-tools/bundles/index.html for documentation.
bundle:
  name: {{.project_name}}
  uuid: {{uuid}}

sync:
  paths:
    - ./src
    - ../shared

include:
  - resources/*.job.yml
  - resources/*.pipeline.yml

variables:
  catalog:
    description: "Catalog name"
    default: {{.catalog_name_prefix}}_dev
  budget_policy_id:
    description: "Budget Policy ID"
    default: 6e02cf2b-bba0-43a6-9843-dfbe5245ea5d

targets:
  dev:
    mode: development
    cluster_id: 0808-165206-5oh7uj9s
    workspace:
      host: {{.workspace_host}}
      root_path: /Workspace/Users/{{.author_email}}/.bundle/${bundle.name}/${bundle.target}
    presets:
      tags:
        env: dev
    default: true
    variables:
      catalog: {{.catalog_name_prefix}}_dev
    permissions:
      - user_name: {{.author_email}}
        level: CAN_MANAGE
      - group_name: "DE-delivery"
        level: CAN_VIEW

  prod:
    mode: production
    workspace:
      host: {{.workspace_host}}
      root_path: /Workspace/Users/${workspace.current_user.userName}/.bundle/${bundle.name}/${bundle.target}
    presets:
      name_prefix: "[Prod] "
      tags:
        env: prod
        pic: {{.author_email}}
    variables:
      catalog: {{.catalog_name_prefix}}_prod
    permissions:
      - service_principal_name: 257035a9-957a-434a-b1a7-f207dec2dde9
        level: CAN_MANAGE
      - user_name: {{.author_email}}
        level: CAN_MANAGE
      - group_name: "DE-delivery"
        level: CAN_MANAGE